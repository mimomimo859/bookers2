<!DOCTYPE html>
<html>
  <head>
    <style type="text/css">

    </style>
    <title>Bookers2Ver2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/c7a33b10f7.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark text-white bg-dark">
       <div class="container">

         
         <%= link_to "Bookers", root_path , class: "navbar-brand" %>
         

         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
         </button>

         <div class="collapse navbar-collapse" id="navbarNavDropdown" style>
           <ul class="navbar-nav ml-auto">
           <% if user_signed_in? %>
           <li>
             <%= link_to user_path(current_user), class: "nav-link text-light" do %>
             <i class="fa fas fa-home fa-w-18" aria-hidden="true" ></i>
             Home
             <% end %>
           </li>
           <li>
             <%= link_to users_path, class: "nav-link text-light" do %>
             <i class="fa fas fa-users fa-w-20" ></i>
             Users
             <% end %>
           </li>
           <li>
             <%= link_to books_path, class: "nav-link text-light" do %>
             <i class="fa fas fa-book-open fa-w-18" ></i>
             Books
             <% end %>
           </li>
           <li>
             <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
             <i class="fa fas fa-sign-out-alt fa-w-16" ></i>
             Log out
             <% end %>
           </li>
           <% else %>
           <li>
             <%= link_to root_path, class: "nav-link text-light" do %>
             <i class="fa fas fa-home fa-w-18" ></i>
             Home
             <% end %>
           </li>
           <li>
             <%= link_to about_path, class: "nav-link text-light" do %>
             <i class="fa fas fa-link fa-w-16" ></i>
             About
             <% end %>
           </li>
           <li>
             <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
             <i class="fa fas fa-user-plus fa-w-20" ></i>
             Sign up
             <% end %>
           </li>
           <li>
             <%= link_to new_user_session_path, class: "nav-link text-light" do %>
             <i class="fa fas fa-sign-in-alt fa-w-16" ></i>
             Log in
             <% end %>
           </li>
           <% end %>
           </ul>
         </div>
       </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
