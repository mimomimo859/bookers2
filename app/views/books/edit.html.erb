<main>
  <% if flash[:notice] %>
      <p id="notice">
       <%= flash[:notice] %>
      </p>
  <% end %>

  <div class="container px-5 px-sm-0">


  <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>

      <% if @book.errors.any? %>
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>
      <div id="error_explanation">
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
     <% end %>

       <%= form_with model: @book do |f| %>

       <div class="form-group">
        <%= f.label :Title %>
        <%= f.text_field :title, class: "form-control book_title" %>
       </div>

       <div class="form-group">
        <%= f.label :Opinion %>
        <%= f.text_field :body, class: "form-control book_body" %>
       </div>

       <div class="form-group">
       <%= f.submit "Update Book", class: "btn btn-success" %>
       </div>

       <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>

     <% end %>
     </div>
    </div>
   </div>
</main>

<footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
</footer>