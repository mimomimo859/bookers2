<main>
<% if flash[:notice] %>
      <p id="notice">
       <%= flash[:notice] %>
      </p>
<% end %>

     <%= render 'profile', book: @book, user: @user %>

      <div class="col-md-8 offset-md-1">

       <h2>Users</h2>
        <table class="table">
         <% @users.each do |f| %>
         <thead>
          <tr>
           <th>image</th>
           <th>name</th>
           <th colspan="3"></th>
          </tr>
         </thead>
         <tbody>
          <tr>
           <td><%= image_tag f.get_profile_image(100,100) %></td>
           <td><%= f.name %></td>
           <td><%= link_to "Show", user_path(f.id) %></td>
          </tr>
         </tbody>
         <% end %>
        </table>
    </div>
  </div>
 </div>
</div>
</main>

<footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
</footer>
